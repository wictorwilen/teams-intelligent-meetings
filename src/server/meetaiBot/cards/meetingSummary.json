{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "ðŸ“’ Meeting summary",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "for: ${title}",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "Company: ${company}",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "value": "${summary}",
      "id": "comments",
      "isMultiline": true
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Send",
      "verb": "sendSummary",
      "data": {
        "id": "${meetingId}"
      },
      "associatedInputs": "auto",
      "style": "positive"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}